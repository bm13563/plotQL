; PlotQL syntax highlighting - Retro Pastel Theme

; Keywords - bright mint/teal green
(with) @keyword
(plot) @keyword
(against) @keyword
(as) @keyword
(filter) @keyword
(format) @keyword
(null) @keyword

; Logical operators - soft coral/peach
(and) @keyword.operator
(or) @keyword.operator
(not) @keyword.operator

; Functions - warm golden yellow
(aggregate_func) @function

; Connector functions - same as aggregate functions
(file_connector) @function.builtin
(clickhouse_connector) @function.builtin

; Strings - soft lavender/purple
(string) @string

; Numbers - sky blue
(number) @number

; Identifiers (columns) - soft peach/coral
(identifier) @variable

; Comparison operators - pink/magenta
(operator) @operator
